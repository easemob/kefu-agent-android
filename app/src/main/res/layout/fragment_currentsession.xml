<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height"
        android:background="@color/bg_top_bar_2">

        <include layout="@layout/top_bar_avatar_layout" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/tabbar_icon_notice"
            android:layout_centerVertical="true"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fl_searchlayout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="110dp"
            >
            <include layout="@layout/search_bar"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_session_count"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_toLeftOf="@id/iv_setting"
            />

    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        >

        <!--  background #f5f7fa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical" >
            <View style="@style/line_view"/>
            <include
                android:id="@+id/rl_error_item"
                layout="@layout/chat_neterror_item"
                android:visibility="gone"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:scrollbars="vertical" />
            <TextView
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="没有会话"
                android:background="#fff"
                android:visibility="gone"
                />
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>