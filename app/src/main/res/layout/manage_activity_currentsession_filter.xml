<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back_icon"
                />
        </RelativeLayout>
        <View
            android:id="@+id/view_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_1"
            android:layout_toRightOf="@id/rl_back"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/view_divider"
            android:text="筛选界面"
            android:textColor="#000000"
            android:textSize="@dimen/top_title_text_size"/>


        <TextView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="筛选"
            android:layout_marginRight="10dp"
            android:textColor="#19a3ff"
            android:textSize="15sp"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <View style="@style/line_view"/>

            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:text="时间段"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp"/>


                <ImageView
                    android:id="@+id/iv_icon_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_status_black_right"/>


                <TextView
                    android:id="@+id/tv_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@id/iv_icon_right"
                    android:text="本周"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <View style="@style/line_view"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_rect_view"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_begintime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="13dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="13dp"
                            android:text="开始时间"
                            android:textColor="#1a1a1a"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_begin_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="13dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="13dp"
                            android:textColor="#1a1a1a"
                            android:textSize="17sp"/>
                    </RelativeLayout>

                    <View style="@style/line_view"/>

                    <RelativeLayout
                        android:id="@+id/rl_endtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="13dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="13dp"
                            android:text="结束时间"
                            android:textColor="#1a1a1a"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="13dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="13dp"
                            android:textColor="#1a1a1a"
                            android:textSize="17sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/line_view"/>

            <RelativeLayout
                android:id="@+id/rl_agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:text="客服"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/agent_icon_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_status_black_right"/>

                <TextView
                    android:id="@+id/tv_agent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@id/agent_icon_right"
                    android:text="全部客服"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <View style="@style/line_view"/>

            <RelativeLayout
                android:id="@+id/rl_visitorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">

                <TextView
                    android:id="@+id/tv_visitor_lb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="16dp"
                    android:text="访客名称"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/vn_icon_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/arrow_status_black_right"/>


                <TextView
                    android:id="@+id/tv_visitorname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@id/vn_icon_right"
                    android:layout_toRightOf="@id/tv_visitor_lb"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="全部"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp" />

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>