<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/nicename_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="客户名"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/visitor_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/line_view" />

            <LinearLayout
                android:id="@+id/truename_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:text="真实姓名"
                    android:layout_width="90dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp"  />

                <TextView
                    android:id="@+id/visitor_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp"  />
            </LinearLayout>

            <View style="@style/line_view" />

            <LinearLayout
                android:id="@+id/telphone_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:text="手机"
                    android:layout_width="90dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/visitor_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/line_view" />

            <LinearLayout
                android:id="@+id/qq_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:text="QQ  "
                    android:layout_width="90dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/visitor_qq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/line_view" />

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:text="邮箱"
                    android:layout_width="90dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/visitor_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/line_view" />

            <LinearLayout
                android:id="@+id/company_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:text="公司"
                    android:layout_width="90dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/visitor_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp"  />
            </LinearLayout>

            <View style="@style/line_view" />

            <LinearLayout
                android:id="@+id/note_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#FFFFFF"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:text="备注"
                    android:layout_width="90dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/visitor_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp"  />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>