<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="320dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip" >

            <Button
                android:id="@+id/btn_close"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/icon_close_2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/select_bg"
            android:orientation="vertical" >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb1"
                    style="@style/time_radiobutton_style"
                    android:text="今天" />

                <View style="@style/line_view" />

                <RadioButton
                    android:id="@+id/rb2"
                    style="@style/time_radiobutton_style"
                    android:text="昨天" />

                <View style="@style/line_view" />

                <RadioButton
                    android:id="@+id/rb3"
                    style="@style/time_radiobutton_style"
                    android:text="本周" />

                <View style="@style/line_view" />

                <RadioButton
                    android:id="@+id/rb4"
                    style="@style/time_radiobutton_style"
                    android:text="本月" />

                <View style="@style/line_view" />

                <RadioButton
                    android:id="@+id/rb5"
                    style="@style/time_radiobutton_style"
                    android:text="上月" />

                <View style="@style/line_view" />

                <RadioButton
                    android:id="@+id/rb6"
                    style="@style/time_radiobutton_style"
                    android:text="指定时段" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="@android:color/background_light"
                android:orientation="vertical" >

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical"
                    android:text="自定义时间段"
                    android:textColor="@color/text_color_4c4c4c"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_time_from"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/button_gray"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/black" />

                    <Button
                        android:id="@+id/btn_time_to"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/button_gray"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip" >

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="70dip"
                    android:layout_height="35dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/bg_button_blue_2"
                    android:text="查询"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>