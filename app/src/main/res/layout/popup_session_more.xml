        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="结束会话"
            android:textColor="#4d4d4d"
            android:textSize="16sp"
            />
      </LinearLayout>

    </LinearLayout>
  </RelativeLayout>

</RelativeLayout>