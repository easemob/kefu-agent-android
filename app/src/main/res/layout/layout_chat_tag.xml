<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/note_label_icon"
        android:focusable="true"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/guide_tips_delete_icon"
            android:layout_gravity="right"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seesion_extra_info"
            android:textSize="15sp"
            android:textColor="#1a1a1a"
            />

        <com.zdxd.tagview.TagView
            android:id="@+id/tagview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1a1a1a"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_show_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/note_label_icon"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:id="@+id/rl_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <ImageButton
            android:id="@+id/btn_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/expand_arror_up"
            android:visibility="invisible"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/expand_arror_down"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

    </RelativeLayout>


</LinearLayout>